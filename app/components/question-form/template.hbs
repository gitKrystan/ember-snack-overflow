{{#if questionFormIsVisible}}
  <!-- AUTHOR -->
  <div class="form-group">
    <label for="author" class="col-sm-2 control-label">Author*</label>
    <div class="col-sm-10">
      {{input value=author class="form-control" placeholder="Your Name"}}
      {{#if warnNeedsAuthor}}
        <span id="helpBlock" class="help-block">Please add author name.</span>
      {{/if}}
    </div>
  </div>

  <!-- CONTENT -->
  <div class="form-group">
    <label for="content" class="col-sm-2 control-label">Question*</label>
    <div class="col-sm-10">
      {{input value=content class="form-control" placeholder="Can you state your question briefly?"}}
      {{#if warnNeedsContent}}
        <span id="helpBlock" class="help-block">Please add a question.</span>
      {{/if}}
    </div>
  </div>

  <!-- NOTES -->
  <div class="form-group">
    <label for="notes" class="col-sm-2 control-label">Description</label>
    <div class="col-sm-10">
      {{textarea value=notes class="form-control" rows="6" placeholder="Describe your question in depth here..."}}
    </div>
  </div>

  <!-- SUBMIT/CANCEL BUTTONS -->
  <div class="form-group">
    <div class="col-sm-10 col-sm-offset-2">
      <div class="row">
        <div class="col-sm-3">
          <button {{action 'hideQuestionForm'}} class="btn btn-default btn-block">Nevermind</button>
        </div>
        <div class="col-sm-9">
          <button {{action 'saveQuestion'}} class="btn btn-primary btn-block">Submit Question</button>
        </div>
      </div>
    </div>
  </div>
{{else}}
  <div class="row">
    <div class="col-sm-10 col-sm-offset-2 so-show-button">
      <button {{action 'showQuestionForm'}} class="btn btn-default btn-block">Ask a Question</button>
    </div>
  </div>
{{/if}}
